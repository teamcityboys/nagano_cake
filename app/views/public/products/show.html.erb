
<div class="container container-m">
  <div class="row">
    <div class="col-md-5">
      <div class="text-center">
        <%= attachment_image_tag(@product, :image_id, :fill, 250, 180, fallback: "no_image.jpg", size:'250x180') %>
      </div>
    </div>
    <div class="col-md-7">
      <h2><%= @product.name %></h2><br>
      <p><%= @product.describe %></p><br>
      <p class="price">￥<%= ((@product.price * 1.1).to_i).to_s(:deliminated) %>（税込）</p><br>
      <%= form_with model:@cart_product,url:cart_products_path, local:true do |f| %>
        <%= f.select :quantity, [["1個", 1], ["2個", 2], ["3個", 3], ["4個", 4], ["5個", 5]] %>

        <%= f.hidden_field :product_id, :value => @product.id %>
        <%= f.submit 'カートに入れる', class: "btn btn-success ml-4" %>
      <% end %>
    </div>
  </div>
</div>
