<div class="row offset-1">
    <div class="col mt-5">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class="row offset-1 d-flex align-items-start">
    <% @products.each do |product| %>
    <div class="col-md-3 ">
      <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag(product, :image_id, :fill, 250, 180,  fallback: "no_image.jpg", size:'250x180') %><br>
      <% end %>
      <%= link_to product_path(product.id) do %>
      <%= product.name %><br>
      <% end %>
      <%= product.price %>円<br>
    </div>
    <% end %>
  </div>
<div class="mt-5" >
  <%= paginate @products %>
</div>