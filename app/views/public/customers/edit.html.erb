<h4>会員情報編集</h4>
<div class="container">
    <%= form_with model:@customer, local:true do |f| %>
   <table class="table">
       <tr>
           <td>氏名</td>
           <td><%= f.text_field :last_name,autofocus:true %> <%= f.text_field :first_name,autofocus:true %></td>
       </tr>
       <tr>
           <td>フリガナ</td>
           <td><%= f.text_field :last_name_kana,autofocus:true %><%= f.text_field :first_name_kana %></td>
       </tr>
       <tr>
           <td>郵便番号</td>
           <td><%= f.text_field :porstal_code,autofocus:true %></td>
       </tr>
       <tr>
           <td>住所</td>
           <td><%= f.text_field :address,size: 60,autofocus:true %></td>
       </tr>
       <tr>
           <td>電話番号</td>
           <td><%= f.text_field :phone_number,autofocus:true %></td>
       </tr>
       <tr>
           <td>メールアドレス</td>
           <td><%= f.email_field :email,autofocus:true %></td>
       </tr>
       <tr>
           <td></td>
           <td><%= f.submit '変更の保存',data: {confirm:"更新してよろしいですか？"}, class:"btn btn-success"%> <%= link_to "退会する", root_path,class:"btn btn-danger" %></td>
        </tr>
   </table>
    <% end %>
</div>
