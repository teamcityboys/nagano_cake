   <div class="container-xxl mt-5 mx-5">
  <h2 class="text-center">新規会員登録</h2>

<div class="row mx-auto">
  <div class="col-md-5 offset-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field form-group d-flex">
    <div class="field">
      <%= f.label :"(姓)" %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"(名)" %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>
</div>

<div class="field form-group d-flex">
    <div class="field">
      <%= f.label :"(セイ)" %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"(メイ)" %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
</div>

  <div class="field">
    <%= f.label :"(メールアドレス)" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"(郵便番号)" %><br />
    <%= f.text_field :porstal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"(住所)" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"(電話番号)" %><br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>




  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認の為、パスワードを再入力してください。 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-3 mx-auto">
    <%= f.submit "Sign up", class:"btn btn-success"%>　　　<%= render "devise/shared/links"%>
  </div>
<% end %>
  </div>
</div>



</div>