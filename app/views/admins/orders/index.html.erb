<div class="container">
  <div class="admins-orders pt-5">
    <h4 class="pb-3">注文履歴一覧</h4>
    <table class="table">
      <tr class="table-info.bg-info">
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
      </tr>
      <% i = 0 %>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admins_order_path(order), class: "text-dark" %>
           
          </td>
          <td><%= order.customer.full_name %></td>
          <td><%= @total_quantity[i] %></td>
          <td><%= order.order_status %></td>
        </tr>
        <% i = i + 1 %>
      <% end %>
    </table>
  </div>
  <%= paginate @orders %>
</div>
