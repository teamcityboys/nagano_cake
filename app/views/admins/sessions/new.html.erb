<div class="container">
  <h4 class="mx-5 my-5"><span class="px-4 bg-light">管理者ログイン</span></h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row py-2">
      <div class="col-2"></div>
      <div class="col-2">
        <%= f.label :'メールアドレス' %>
      </div>
      <div class="col-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size:"50%" %>
      </div>
    </div>
     <div class="row py-2">
      <div class="col-2"></div>
      <div class="col-2">
        <%= f.label :'パスワード' %>
      </div>
      <div class="col-4">
        <%= f.password_field :password, autocomplete: "current-password", size:"50%" %>
      </div>
    </div>
    <div class="text-center my-4"><%= f.submit "ログイン" , class:"btn btn-primary px-4"%></div>
    <% end %>
</div>